
@{
    Layout = "~/Views/Shared/Layouts/MainLayout.cshtml";
}

@model Topics.Models.PostList
@using Topics.Models

<div class="row row-cols-1 g-3 m-5">

    @foreach (Post post in Model.Posts)
    {
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="d-flex flex-column align-items-center width-max-content mx-2">
                <i class="bi bi-arrow-up-square arrow-icon" name="up-arrow" data-post-slug="@post.Slug"></i>
                32
                <i class="bi bi-arrow-down-square arrow-icon" name="down-arrow" data-post-slug="@post.Slug"></i>
            </div>
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">World</strong>
                <h3 class="mb-0">Featured post</h3>
                <div class="mb-1 text-muted">Nov 12</div>
                <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                <a href="#">Continue reading</a>
            </div>
            <div class="col-auto d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            </div>
        </div>
    }
       
</div>

<script>
    const upArrows = document.getElementsByName("up-arrow");
    const downArrows = document.getElementsByName("down-arrow");


    upArrows.forEach((upArrow) => 
        upArrow.addEventListener("click", onUpArrow)
    );

    downArrows.forEach(downArrow =>
        downArrow.addEventListener("click", onDownArrow)
    );

    function onUpArrow(event) {
        const postSlug = event.target.attributes["data-post-slug"].nodeValue;
        location.href = `/post/upVote/${postSlug}`;
    }

    function onDownArrow(event) {
        const postSlug = event.target.attributes["data-post-slug"].nodeValue;
        location.href = `/post/downVote/${postSlug}`;
    }
</script>
