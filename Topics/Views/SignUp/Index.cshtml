
@{
    Layout = "~/Views/Shared/Layouts/_BasicLayout.cshtml";
}

@section Title {
    Sign Up
}

@section Import {}

<form method="POST" action="/signup">
    <div class="container text-center d-flex flex-column align-items-center mt-5 gap-2">
        <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

        <div class="form-floating">
            <input 
                   class="form-control" 
                   id="floatingUsername" 
                   placeholder="Username" 
                   name="username" required 
             />
            <label for="floatingUsername">Username</label>
        </div>

        <div class="form-floating">
            <input 
                   type="email" 
                   class="form-control" 
                   id="floatingEmail" 
                   placeholder="name@example.com" 
                   name="email" required 
            />
            <label for="floatingEmail">Email address</label>
        </div>

        <div class="form-floating">
            <input 
                   type="password" 
                   class="form-control" 
                   id="floatingPassword" 
                   placeholder="Password" 
                   name="password" 
                   required 
                   minlength="6" 
            />
            <label for="floatingPassword">Password</label>
        </div>

        <div class="form-floating">
            <input 
                   type="password" 
                   class="form-control" 
                   id="floatingPasswordRepeat" 
                   placeholder="Repeat Password" 
                   name="passwordRepeat" 
                   required 
                   minlength="6" 
            />
            <label for="floatingPasswordRepeat">Repeat Password</label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
    </div>
</form>